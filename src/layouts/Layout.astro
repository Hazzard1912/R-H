---
import SearchBar from "../components/SearchBar.astro";
import type { ImageData } from "../interfaces/imageData.response";

interface Props {
	title: string;
	id?: string;
	image?: ImageData;
	meta?: string;
}

const { title, id, image, meta } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-KZXETM6CMV"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-KZXETM6CMV");
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="rating" content="mature" />

		<!-- Primary Meta Tags -->
		<title>
			{title}{id ? ` ${id}` : ""} - RinconHentai: Tu Portal de Anime y Hentai
		</title>
		<meta name="title" content={`${title} - RinconHentai`} />
		<meta
			name="description"
			content="Descubre y disfruta del mejor contenido de anime y hentai en RinconHentai. Explora imágenes, doujinshi, y más."
		/>
		<meta
			name="keywords"
			content={`RinconHentai, imageboard, hentai, hentai manga, uncensored hentai, doujinshi, erotic art, adult content, japanese art, anime art, fan art, adult cartoons, video game art, fantasy, visual novels, fanfiction, ecchi, 18+ art, ${meta}`}
		/>
		<meta name="robots" content="index, follow" />
		<meta name="language" content="Spanish" />
		<meta name="author" content="RinconHentai" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta
			property="og:url"
			content={`https://rinconhentai.com${Astro.url.pathname}`}
		/>
		<meta property="og:title" content={`${title} - RinconHentai`} />
		<meta
			property="og:description"
			content="Descubre y disfruta del mejor contenido de anime y hentai en RinconHentai. Explora imágenes, doujinshi, y más"
		/>
		<meta
			property="og:image"
			content={image?.preview_url ||
				"https://rinconhentai.com/banner.png"}
		/>
		<meta property="og:site_name" content="RinconHentai" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta
			property="twitter:url"
			content={`https://rinconhentai.com${Astro.url.pathname}`}
		/>
		<meta property="twitter:title" content={`${title} - RinconHentai`} />
		<meta
			property="twitter:description"
			content="Descubre y disfruta del mejor contenido de anime y hentai en RinconHentai. Explora imágenes, doujinshi, y más"
		/>
		<meta
			property="twitter:image"
			content={image?.preview_url ||
				"https://rinconhentai.com/banner.png"}
		/>

	</head>
	<body>
		<SearchBar />
		<slot />
	</body><footer class="p-12 bg-gray-900/40 backdrop-blur-sm mt-16">
		<div class="max-w-6xl mx-auto">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<div class="text-center md:text-left">
					<h2
						class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-purple-600 mb-4"
					>
						Somos Rincon Hentai, la mejor página al servicio de la
						amplia comunidad amante del hentai.
					</h2>
				</div>
				<div class="text-center md:text-right">
					<p class="text-gray-400 mb-2">
						© {new Date().getFullYear()} RinconHentai
					</p>
					<p class="text-gray-300">
						Para sugerencias, contáctanos en
						<a
							href="mailto:rinconhentai@proton.me"
							class="text-pink-400 hover:text-pink-300 transition-colors duration-300"
						>
							rinconhentai@proton.me
						</a>
					</p>
				</div>
			</div>
			<div class="border-t border-gray-800 mt-8 pt-8 text-center">
				<p class="text-sm text-gray-300 mb-2">
					Las imágenes han sido tomadas de Rule34
				</p>
				<p class="text-sm text-gray-400">
					Al usar este sitio, aceptas nuestros
					<a
						href="/terminos-de-uso"
						class="text-pink-400 hover:text-pink-300 transition-colors duration-300"
					>
						términos de uso
					</a>
				</p>
			</div>
		</div>
	</footer>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #070707;
		color: #fff;
	}

	.footer {
		background-color: #181818;
		padding: 20px;
	}

	.footer-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.footer-column {
		margin: 10px 0;
	}

	@media (min-width: 600px) {
		.footer-content {
			flex-direction: row;
			justify-content: space-between;
		}

		.footer-column {
			margin: 0 20px;
		}
	}

	a {
		color: #cd2c1b;
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}
</style>
